#include<iostream>
using namespace std;
int main()
{
          float nota;
          
          cout<<"digite nota: ";
          cin>>nota;
          while (nota<= 0 || nota >= 10)
          {
                cout<<"Digite nota: ";
                cin>>nota;
                
          }
          system("pause");
          
}


