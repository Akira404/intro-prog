#include<iostream>
using namespace std;
int main()
{
          float num;
          
          
          do
          {
                cout<<" digite numero: \n";
                cin>>num;
                cout<<" o triplo "<<num*3<<"\n";
               
                
          }
          while (num!=-999);
         

          
          system("pause");
          
