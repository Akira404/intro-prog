#include<iostream>
#include<cmath>
using namespace std;
int main()
{
 	float inv, valor;
 	
cout<<"investimento tipo 1 | poupaca | rendimento de 3% AM \n";
cout<<"investimento tipo 2 | fundos renda puplica | rendimento de 4% AM \n";
cout<<"selecione o investimento";
cin>>inv;

if (inv ==1)
	{
	   cout<<" digite quanto deseja investir \n";
	   cin>>valor;
	   cout<<"renda mensal de : "<<valor*0.03<<"\n";
	}
	else
	{
		if(inv ==2)
		{
		cout<<" digite quanto deseja investir \n";
		cin>>valor;
		cout<<"renda mensal de : "<<valor*0.04<<"\n";
		}
	
else

{
cout<<"tipo de investimento invalido";
}
}
 	system("pause");
return 0;
}



