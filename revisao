#include<iostream>
using namespace std;
int main()
{
    float valor,rend;
    int tipo;
    char resp;
    do
    {
    cout<<"Digite valor : ";
    cin>>valor;
    cout<<"Digite 1-PoupanÃ§a e 2-Fundos Renda Fixa : ";
    cin>>tipo;
    if (tipo==1)
      {
        rend = valor*0.03+valor;
        cout<<"Rendimentos= "<<rend<<"\n";
      }
    else
    {
      if (tipo == 2)
        {
         rend = valor+valor*0.04;
         cout<<"Rendimentos= "<<rend<<"\n";
        }
      else
      {
        cout<<"tipo invalido \n";
      }
    }
    cout<<"Deseja repetir s ou n? ";
    cin>>resp;
    resp = toupper(resp);
  } 
  while(resp != 'N');
    system("pause");
    return 0;
}
